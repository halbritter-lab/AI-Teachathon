{
  "name": "ai-teachathon",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "docs:dev": "vitepress dev docs --port 4321",
    "docs:build": "npm run build:marp && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "copy:marp-assets": "node -e \"const fs=require('fs');if(fs.existsSync('docs/presentation/images'))fs.cpSync('docs/presentation/images','docs/public/images',{recursive:true})\"",
    "build:marp": "npm run copy:marp-assets && marp docs/presentation/slides.md -o docs/public/presentation.html --theme docs/.vitepress/theme/marp-theme.css --html",
    "dev:marp": "npm run copy:marp-assets && marp docs/presentation/slides.md -o docs/public/presentation.html --theme docs/.vitepress/theme/marp-theme.css --html --watch",
    "lint": "markdownlint-cli2 \"docs/**/*.md\"",
    "lint:fix": "markdownlint-cli2 --fix \"docs/**/*.md\"",
    "format": "prettier --write \"docs/**/*.{md,vue,ts,css,json,yml}\" \"*.{json,js,ts}\" \".github/**/*.yml\"",
    "format:check": "prettier --check \"docs/**/*.{md,vue,ts,css,json,yml}\" \"*.{json,js,ts}\" \".github/**/*.yml\"",
    "test": "playwright test --config .playwright/playwright.config.ts",
    "test:ui": "playwright test --config .playwright/playwright.config.ts --ui"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.0.0",
    "markdownlint-cli2": "^0.21.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.0.0",
    "vitepress": "^1.5.0"
  }
}
